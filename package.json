{
    "name": "autographa",
    "productName": "autographa-editor",
    "description": "A Bible translation editor for everyone.",
    "email": "autographa.support@bridgeconn.com",
    "author": "Friends of Agape <autographa.support@bridgeconn.com>",
    "version": "2.4.0",
    "license": "MIT",
    "private": true,
    "main": "main/index.js",
    "homepage": "./",
    "repository": {
        "type": "git",
        "url": "https://github.com/friendsofagape/autographa"
    },
    "scripts": {
        "clean": "rimraf dist renderer/.next renderer/out",
        "start": "electron .",
        "dev": "next dev",
        "prod": "npm run build && next start",
        "test": "jest",
        "e2e": "npx playwright test",
        "lint": "eslint ./renderer/src",
        "lint:fix": "eslint ./renderer/src --fix",
        "maxmemory-allocation": "NODE_OPTIONS=--max_old_space_size=4096",
        "eslint:github-action": "node ./node_modules/eslint/bin/eslint . --ignore-path .gitignore --max-warnings 0",
        "build": "next build renderer && next export renderer",
        "pack-app": "npm run build && electron-builder --dir",
        "dist": "npm run build && electron-builder -p never",
        "deploy": "npm run build && electron-builder -p always"
    },
    "eslintIgnore": [
        "*.test.js"
    ],
    "build": {
        "asar": true,
        "extraResources": "renderer/public",
        "extraMetadata": {
            "main": "main/index.js"
        },
        "files": [
            "main",
            "renderer/out",
            "public",
            "renderer/public/**/*",
            "build/**/*",
            "postcss.config.js",
            "renderer/jsconfig.json",
            "styles/**/*"
        ],
        "linux": {
            "target": [
                "deb"
            ],
            "icon": "styles/icon.icns"
        },
        "mac": {
            "category": "public.app-category.Utilities",
            "target": "dmg",
            "icon": "styles/icon.icns",
            "type": "distribution"
        },
        "win": {
            "target": "nsis",
            "icon": "styles/autographa_icon.png",
            "publish": [
                "github"
            ]
        },
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "oneClick": false
        },
        "publish": [
            {
                "provider": "github",
                "owner": "vipinpaul",
                "repo": "autographa"
            }
        ]
    },
    "devDependencies": {
        "@babel/eslint-parser": "^7.21.3",
        "@babel/preset-env": "^7.21.4",
        "@babel/preset-react": "^7.18.6",
        "@netlify/plugin-nextjs": "^4.34.0",
        "@playwright/test": "^1.32.3",
        "@svgr/webpack": "^7.0.0",
        "@testing-library/dom": "^9.2.0",
        "@testing-library/jest-dom": "^5.16.4",
        "@testing-library/react": "^14.0.0",
        "@testing-library/user-event": "14.4.3",
        "ajv": "^8.12.0",
        "autoprefixer": "^10.4.13",
        "babel-jest": "^29.5.0",
        "babel-plugin-istanbul": "^6.1.1",
        "canvas": "^2.9.1",
        "electron": "24.0.0",
        "electron-builder": "^23.6.0",
        "eslint": "^8.17.0",
        "eslint-config-airbnb": "^19.0.4",
        "eslint-config-next": "^13.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-jsx-a11y": "^6.5.1",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.30.0",
        "eslint-plugin-react-hooks": "^4.5.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "jest": "^26.6.3",
        "null-loader": "^4.0.1",
        "playwright": "^1.22.2",
        "postcss": "^8.4.21",
        "prettier": "^2.8.3",
        "tailwindcss": "^3.2.4"
    },
    "dependencies": {
        "@electron/remote": "^2.0.8",
        "@emotion/react": "^11.10.5",
        "@emotion/styled": "^11.10.5",
        "@headlessui/react": "^1.7.8",
        "@heroicons/react": "^2.0.14",
        "@material-ui/core": "^4.12.4",
        "@material-ui/icons": "^4.11.3",
        "@material-ui/lab": "4.0.0-alpha.57",
        "@mui/icons-material": "^5.10.9",
        "@mui/lab": "^5.0.0-alpha.104",
        "@mui/material": "^5.10.12",
        "@tailwindcss/forms": "^0.5.2",
        "@tailwindcss/typography": "^0.5.9",
        "@xelah/type-perf-html": "^1.0.1",
        "adm-zip": "^0.5.9",
        "bible-reference-rcl": "^1.1.0",
        "crypto-js": "^4.1.1",
        "electron-is-dev": "^2.0.0",
        "electron-next": "^3.1.5",
        "electron-updater": "^5.3.0",
        "epitelete-html": "^0.2.18",
        "font-list": "^1.4.5",
        "fs-extra": "^11.1.1",
        "get-system-fonts": "^2.0.2",
        "gitea-react-toolkit": "^2.1.2",
        "i18next": "^21.8.9",
        "is-electron": "^2.2.1",
        "localforage": "1.10.0",
        "lodash.isequal": "^4.5.0",
        "markdown-translatable": "^1.3.0",
        "md5": "^2.3.0",
        "moment": "^2.29.3",
        "next": "^13.0.0",
        "next-images": "^1.8.4",
        "next-on-netlify": "^3.0.1",
        "next-optimized-images": "^2.6.2",
        "nprogress": "^0.2.0",
        "postcss-import": "^15.1.0",
        "postcss-nested": "^6.0.0",
        "prop-types": "15.8.1",
        "proskomma-react-hooks": "2.4.0",
        "raw-loader": "^4.0.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-i18next": "^12.2.0",
        "react-media-recorder": "^1.6.6",
        "react-scripts": "5.0.1",
        "styled-components": "^5.3.6",
        "tc-ui-toolkit": "^5.3.3",
        "translation-helps-rcl": "^3.3.7",
        "use-deep-compare": "^1.1.0",
        "usfm-editor": "0.8.7",
        "usfm-grammar": "^2.3.0",
        "uuid": "^9.0.0",
        "wavesurfer.js": "^6.6.3",
        "webpack-node-externals": "^3.0.0",
        "winston": "^3.8.2",
        "word-aligner": "^1.0.2",
        "yarn": "^1.22.19"
    },
    "optionalDependencies": {
        "bufferutil": "^4.0.6",
        "scripture-resources-rcl": "^5.1.0",
        "utf-8-validate": "^5.0.9"
    },
    "overrides": {
        "react": "$react",
        "react-dom": "$react-dom",
        "@material-ui/lab": "$@material-ui/lab",
        "gitea-react-toolkit": "$gitea-react-toolkit",
        "word-aligner": "$word-aligner",
        "@mui/lab": "$@mui/lab"
    }
}
